      $("div.article-desc").text(function() {
        return $(this).text().substr(0, 200)+".....";
      });
  });
</script>
  <link rel="stylesheet" href="/stylesheets/front.css">
  {{> heading_animation_js}}
{{#if PROD_MODE}}
    <script>
        (function(i, s, o, g, r, a, m) {
